<!-- VETTING PROCESS HORIZONTAL SCROLL SECTION -->
<section class="py-5" aria-label="Screening Process">
  <div class="container-fluid px-4">
    <div class="text-center mb-5">
      <h2 class="display-6 fw-bold text-primary mb-3">Our Streamlined 5-Step Screening Process</h2>
      <p class="lead text-muted">We believe trust starts with transparency. Here is how we ensure only the best join the Huus team.</p>
    </div>
    
    <% 
      const steps = [
        { number: 1, title: 'Online Application', desc: 'All professional cleaner applicants must complete our thorough online screening. Only those who pass move on to Phase 2.', color: 'success' },
        { number: 2, title: 'Phone Interview', desc: 'Next, a Huus representative conducts a detailed phone interview with the cleaner. During the call, we assess their credibility and review their experience with home and Airbnb cleaning services.', color: 'info' },
        { number: 3, title: 'Video Call Vetting', desc: 'After a successful phone interview, we conduct a video call to thoroughly vet the candidate. Only the best make it through.', color: 'warning' },
        { number: 4, title: 'Voluntary Orientation', desc: 'If a local cleaner makes it through these three steps, they move on to the voluntary orientation phase to fully understand the Huus Method.', color: 'primary' },
        { number: 5, title: 'Background Check', desc: 'The final step is a thorough background check to ensure your cleaner is fully vetted and trustworthy.', color: 'danger' }
      ];
    %>
    
    <div class="steps-scroll-container" style="overflow-x: auto; overflow-y: hidden; padding-bottom: 20px; scrollbar-width: thin; scrollbar-color: #E5482E #f3f3f3;" role="region" aria-label="Screening process steps" tabindex="0">
      <div class="d-flex flex-nowrap gap-4" style="width: max-content;">
        <% steps.forEach((step, index) => { %>
          <div class="flex-shrink-0" style="width: 350px; min-width: 350px;">
            <div class="card border-start border-<%= step.color %> border-4 shadow-lg h-100">
              <div class="card-body p-4 text-center">
                <div class="display-3 text-<%= step.color %> mb-3 fw-bold"><%= step.number %></div>
                <h3 class="card-title text-<%= step.color %> fw-bold mb-3 h5">Step <%= step.number %>: <%= step.title %></h3>
                <p class="card-text mb-0"><%= step.desc %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    
    <style>
      .steps-scroll-container::-webkit-scrollbar {
        height: 8px;
      }
      .steps-scroll-container::-webkit-scrollbar-track {
        background: #f3f3f3;
        border-radius: 10px;
      }
      .steps-scroll-container::-webkit-scrollbar-thumb {
        background: #E5482E;
        border-radius: 10px;
      }
      .steps-scroll-container::-webkit-scrollbar-thumb:hover {
        background: #C43D27;
      }
    </style>
  </div>
</section>

<hr class="my-5">


<%- include('../partials/header', { title: 'Create Password - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<!-- Create password page header -->
<div class="page-header">
    <h1>Create Password</h1>
    <p>Create a password for your account</p>
</div>

<div class="form-container">
    <!-- Show error if password creation failed -->
    <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="flash-message flash-error">
            <%= error_message %>
        </div>
    <% } %>

    <p style="margin-bottom: 1rem; color: var(--text-secondary);">
        Email: <strong><%= email %></strong>
    </p>

    <!-- Password creation form -->
    <form action="/create-password/<%= personid %>" method="POST" aria-label="Create password form">
        <div class="form-group">
            <label for="password">New Password <span aria-label="required">*</span></label>
            <input type="password" id="password" name="password" required autofocus aria-required="true" autocomplete="new-password" maxlength="20" minlength="8">
            <small class="field-hint">Minimum 8 characters, maximum 20 characters</small>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password <span aria-label="required">*</span></label>
            <input type="password" id="confirmPassword" name="confirmPassword" required aria-required="true" autocomplete="new-password" maxlength="20" minlength="8">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary" aria-label="Create password">Create Password</button>
            <a href="/login" class="btn btn-secondary" aria-label="Cancel and return to login">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>


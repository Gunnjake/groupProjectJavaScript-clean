<%- include('../partials/header', { title: 'Login - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Login</h1>
    <p>Access your Ella Rises account</p>
</div>

<div class="form-container">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="flash-message flash-error">
            <%= error %>
        </div>
    <% } %>

    <form action="/login" method="POST">
        <div class="form-group">
            <label for="username">Username *</label>
            <input type="text" id="username" name="username" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Password *</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<div class="card mt-2">
    <h2 class="card-header">User Roles</h2>
    <p><strong>Manager:</strong> Full access to maintain all data including users, participants, events, surveys, milestones, and donations.</p>
    <p><strong>Common User:</strong> View-only access to participants, events, surveys, milestones, and donations.</p>
</div>

<%- include('../partials/footer') %>



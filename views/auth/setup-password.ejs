<%- include('../partials/header', { title: 'Setup Password - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<!-- Password setup page header -->
<div class="page-header">
    <h1>Setup Your Password</h1>
    <p>Your account needs a password to continue</p>
</div>

<div class="form-container">
    <!-- Show error if any -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="flash-message flash-error" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Account info display -->
    <div style="background-color: var(--pink-bg); padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem;">
        <p style="margin: 0; color: var(--text-dark);">
            <strong>Account:</strong> <%= typeof username !== 'undefined' && username ? username : 'N/A' %><br>
            <strong>Email:</strong> <%= typeof email !== 'undefined' && email ? email : 'N/A' %>
        </p>
    </div>

    <!-- Password setup form -->
    <form action="/setup-password" method="POST" aria-label="Password setup form" novalidate>
        <div class="form-group">
            <label for="password">Create Password <span aria-label="required">*</span></label>
            <input type="password" id="password" name="password" required minlength="8" aria-describedby="password-hint" aria-required="true" autocomplete="new-password" autofocus>
            <small id="password-hint" class="field-hint">Minimum 8 characters</small>
        </div>
        
        <div class="form-group">
            <label for="confirmPassword">Confirm Password <span aria-label="required">*</span></label>
            <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8" aria-describedby="confirm-password-hint" aria-required="true" autocomplete="new-password">
            <small id="confirm-password-hint" class="field-hint">Re-enter your password</small>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary" aria-label="Set password and continue">Set Password</button>
            <a href="/login" class="btn btn-secondary" aria-label="Cancel and return to login">Cancel</a>
        </div>
    </form>
    
    <!-- Security note -->
    <div style="margin-top: 1.5rem; padding: 1rem; background-color: #e3f2fd; border-left: 4px solid #2196f3; border-radius: 4px;">
        <p style="margin: 0; color: #1565c0; font-size: 0.9rem;">
            <strong>Security:</strong> Choose a strong password that you haven't used elsewhere. Your password will be securely encrypted.
        </p>
    </div>
</div>

<script>
// Client-side password validation
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[action="/setup-password"]');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    if (form) {
        form.addEventListener('submit', function(e) {
            if (password.value.length < 8) {
                e.preventDefault();
                alert('Password must be at least 8 characters long.');
                password.focus();
                return false;
            }
            
            if (password.value !== confirmPassword.value) {
                e.preventDefault();
                alert('Passwords do not match. Please try again.');
                confirmPassword.focus();
                return false;
            }
        });
    }
    
    // Real-time password match validation
    if (confirmPassword) {
        confirmPassword.addEventListener('blur', function() {
            if (confirmPassword.value && password.value !== confirmPassword.value) {
                confirmPassword.setCustomValidity('Passwords do not match');
            } else {
                confirmPassword.setCustomValidity('');
            }
        });
    }
});
</script>

<%- include('../partials/footer') %>


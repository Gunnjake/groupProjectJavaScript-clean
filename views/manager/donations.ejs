<%- include('../partials/header', { title: 'Donations - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Donations</h1>
    <p>Manage donation records</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search donations</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search donations by donor name, email, or amount..." aria-label="Search donations by donor name, email, or amount">
    <a href="/donations/new" class="btn btn-primary" aria-label="Add new donation">Add New Donation</a>
</div>

<div class="table-container" role="region" aria-label="Donations table">
    <table aria-label="Donations">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Donor Name</th>
                <th scope="col">Email</th>
                <th scope="col">Amount</th>
                <th scope="col">Payment Method</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="donations-table-body">
            <!-- Donations populated from database -->
            <tr>
                <td colspan="7" class="text-center" role="status" aria-live="polite">No donations found. Add a donation to get started.</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#donations-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#donations-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} donation${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



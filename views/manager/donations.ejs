<%- include('../partials/header', { title: 'Donations - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Donations</h1>
    <p>Manage donation records</p>
</div>

<div class="search-container">
    <input type="text" id="search-input" class="search-input" placeholder="Search donations by donor name, email, or amount...">
    <a href="/donations/new" class="btn btn-primary">Add New Donation</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Donor Name</th>
                <th>Email</th>
                <th>Amount</th>
                <th>Payment Method</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="donations-table-body">
            <!-- Donations will be populated here when database is connected -->
            <tr>
                <td colspan="7" class="text-center">No donations found. Add a donation to get started.</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    // Search functionality
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#donations-table-body tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>


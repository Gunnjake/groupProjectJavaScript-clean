<%- include('../partials/header', { title: "Edit Event", user: user || null }) %>

<div class="page-header">
    <h1>Edit Event</h1>
    <p>Update event information</p>
</div>

<div class="form-container">
    <form method="POST" action="/events/edit/<%= event.eventoccurrenceid %>">
        <div class="form-group">
            <label for="eventname">Event Name *</label>
            <input type="text" id="eventname" name="eventname" value="<%= event.eventname || '' %>" required>
        </div>

        <div class="form-group">
            <label for="eventtype">Event Type</label>
            <input type="text" id="eventtype" name="eventtype" value="<%= event.eventtype || '' %>">
        </div>

        <div class="form-group">
            <label for="eventdescription">Event Description</label>
            <textarea id="eventdescription" name="eventdescription" rows="4"><%= event.eventdescription || '' %></textarea>
        </div>

        <div class="form-group">
            <label for="eventlocation">Location</label>
            <input type="text" id="eventlocation" name="eventlocation" value="<%= event.eventlocation || '' %>">
        </div>

        <div class="form-group">
            <label for="eventstart">Start Date/Time</label>
            <input type="datetime-local" id="eventstart" name="eventstart" value="<%= event.eventdatetimestart ? new Date(event.eventdatetimestart).toISOString().slice(0,16) : '' %>">
        </div>

        <div class="form-group">
            <label for="eventend">End Date/Time</label>
            <input type="datetime-local" id="eventend" name="eventend" value="<%= event.eventdatetimeend ? new Date(event.eventdatetimeend).toISOString().slice(0,16) : '' %>">
        </div>

        <div class="form-group">
            <label for="eventcapacity">Capacity</label>
            <input type="number" id="eventcapacity" name="eventcapacity" value="<%= event.eventcapacity || '' %>">
        </div>

        <div class="form-actions">
            <button class="btn btn-primary" type="submit">Save Changes</button>
            <a href="/events" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>



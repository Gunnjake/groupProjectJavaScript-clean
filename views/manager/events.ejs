<%- include('../partials/header', { title: 'Events - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Events</h1>
    <p>Manage events and workshops</p>
</div>

<!-- Filter Tabs -->
<div class="filter-tabs" style="margin-bottom: 1.5rem; display: flex; gap: 0.5rem; border-bottom: 2px solid var(--border-light);">
    <a href="/events?filter=future" class="filter-tab <%= typeof filter !== 'undefined' && filter === 'future' ? 'active' : '' %>" style="padding: 0.75rem 1.5rem; text-decoration: none; color: var(--text-dark); border-bottom: 3px solid <%= typeof filter !== 'undefined' && filter === 'future' ? 'var(--coral)' : 'transparent' %>; transition: border-color 0.2s;">
        Future Events
    </a>
    <a href="/events?filter=past" class="filter-tab <%= typeof filter !== 'undefined' && filter === 'past' ? 'active' : '' %>" style="padding: 0.75rem 1.5rem; text-decoration: none; color: var(--text-dark); border-bottom: 3px solid <%= typeof filter !== 'undefined' && filter === 'past' ? 'var(--coral)' : 'transparent' %>; transition: border-color 0.2s;">
        Past Events
    </a>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search events</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search events by name, type, or location..." aria-label="Search events by name, type, or location">
    <a href="/events/new" class="btn btn-primary" aria-label="Add new event">Add New Event</a>
</div>

<div class="table-container" role="region" aria-label="Events table">
    <table aria-label="Events">
        <thead>
            <tr>
                <th scope="col">Event Name</th>
                <th scope="col">Type</th>
                <th scope="col">Date</th>
                <th scope="col">Location</th>
                <th scope="col">Participants</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="events-table-body">
            <% if (typeof events !== 'undefined' && events.length > 0) { %>
                <% events.forEach(function(event) { %>
                    <tr>
                        <td><%= event.EventName || event.eventname %></td>
                        <td><%= event.EventType || event.event_type || 'N/A' %></td>
                        <td>
                            <% 
                                const earliestDate = event.earliestDate || event.earliest_date;
                                const latestDate = event.latestDate || event.latest_date;
                                if (earliestDate) {
                                    try {
                                        const startDate = new Date(earliestDate);
                                        const formattedStart = startDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                                        
                                        if (latestDate && latestDate !== earliestDate) {
                                            const endDate = new Date(latestDate);
                                            const formattedEnd = endDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                            %>
                                <%= formattedStart %> - <%= formattedEnd %>
                            <%      } else { %>
                                <%= formattedStart %>
                            <%      }
                                } catch(e) { %>
                                <%= earliestDate %>
                            <%  }
                                } else { %>
                                TBA
                            <% } %>
                            <% if (event.occurrenceCount > 1) { %>
                                <br><small style="color: var(--text-secondary);">(<%= event.occurrenceCount %> occurrences)</small>
                            <% } %>
                        </td>
                        <td><%= event.location || event.EventLocation || event.eventlocation || 'TBA' %></td>
                        <td><%= event.participantCount !== undefined ? event.participantCount : 0 %></td>
                        <td>
                            <% if (event.isPast) { %>
                                <button type="button" class="btn btn-sm btn-danger" disabled title="Past events cannot be deleted" aria-label="Delete event (disabled - past events cannot be deleted)" style="opacity: 0.5; cursor: not-allowed;">Delete</button>
                            <% } else { %>
                                <span style="color: var(--text-secondary); font-size: 0.9rem;">Future events can be managed individually</span>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center" role="status" aria-live="polite">No events found. Add an event to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#events-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#events-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} event${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



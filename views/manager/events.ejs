<%- include('../partials/header', { title: 'Events - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Events</h1>
    <p>Manage events and workshops</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search events</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search events by name, type, or location..." aria-label="Search events by name, type, or location">
    <a href="/events/new" class="btn btn-primary" aria-label="Add new event">Add New Event</a>
</div>

<div class="table-container" role="region" aria-label="Events table">
    <table aria-label="Events">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Event Name</th>
                <th scope="col">Type</th>
                <th scope="col">Date</th>
                <th scope="col">Location</th>
                <th scope="col">Participants</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="events-table-body">
            <% if (typeof events !== 'undefined' && events.length > 0) { %>
                <% events.forEach(function(event) { %>
                    <tr>
                        <td><%= event.EventOccurrenceID || event.eventoccurrenceid || event.id %></td>
                        <td><%= event.EventName || event.eventname %></td>
                        <td><%= event.EventType || event.event_type || 'N/A' %></td>
                        <td>
                            <% 
                                const eventDate = event.EventDateTimeStart || event.eventdatetimestart;
                                if (eventDate) {
                                    try {
                                        const date = new Date(eventDate);
                                        const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                                        const formattedTime = date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
                                        const output = formattedDate + ' ' + formattedTime;
                            %>
                                <%= output %>
                            <%  } catch(e) { %>
                                <%= eventDate %>
                            <%  }
                                } else { %>
                                TBA
                            <% } %>
                        </td>
                        <td><%= event.EventLocation || event.eventlocation || event.location || 'TBA' %></td>
                        <td>N/A</td>
                        <td>
                            <a href="/events/<%= event.EventOccurrenceID || event.eventoccurrenceid || event.id %>/edit" class="btn btn-sm btn-secondary" aria-label="Edit event">Edit</a>
                            <form action="/events/<%= event.EventOccurrenceID || event.eventoccurrenceid || event.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this event?');" aria-label="Delete event">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center" role="status" aria-live="polite">No events found. Add an event to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#events-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#events-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} event${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



<%- include('../partials/header', { title: "Manage Milestones", user: user || null }) %>

<div class="page-header">
    <h1>Milestones for <%= person.firstname %> <%= person.lastname %></h1>
    <p><strong>Email:</strong> <%= person.email %></p>
</div>

<div class="table-container">
    <table aria-label="Milestones">
        <thead>
            <tr>
                <th scope="col">Milestone Title</th>
                <th scope="col">Date Achieved</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (milestones && milestones.length > 0) { %>
                <% milestones.forEach(m => { %>
                    <tr>
                        <td><%= m.milestonetitle %></td>
                        <td><%= m.milestonedate ? new Date(m.milestonedate).toISOString().slice(0,10) : 'N/A' %></td>
                        <td>
                            <div class="action-buttons">
                                <a href="/milestones/edit/<%= m.milestoneid %>" class="btn btn-sm btn-primary">Edit</a>
                                <form method="POST" action="/milestones/delete/<%= m.milestoneid %>" onsubmit="return confirm('Remove this milestone?');" style="display: inline;">
                                    <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center">No milestones recorded.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<div class="form-actions" style="margin-top: 1.5rem;">
    <a href="/milestones/add?personid=<%= person.personid %>" class="btn btn-primary">Add Milestone</a>
    <a href="/participants" class="btn btn-secondary">Back to Participants</a>
</div>

<%- include('../partials/footer') %>


<%- include('../partials/header', { title: 'Milestones - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Milestones</h1>
    <p>Manage milestones and assign them to participants (1 to many relationship)</p>
</div>

<div class="search-container">
    <input type="text" id="search-input" class="search-input" placeholder="Search milestones by name, type, or participant...">
    <a href="/milestones/new" class="btn btn-primary">Add New Milestone</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Milestone Name</th>
                <th>Type</th>
                <th>Participant</th>
                <th>Achievement Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="milestones-table-body">
            <!-- Milestones will be populated here when database is connected -->
            <tr>
                <td colspan="7" class="text-center">No milestones found. Add a milestone to get started.</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    // Search functionality
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#milestones-table-body tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>


<%- include('../partials/header', { title: 'Milestones - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Milestones</h1>
    <p>Manage milestones and assign them to participants (1 to many relationship)</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search milestones</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search milestones by name, type, or participant..." aria-label="Search milestones by name, type, or participant">
    <a href="/milestones/new" class="btn btn-primary" aria-label="Add new milestone">Add New Milestone</a>
</div>

<div class="table-container" role="region" aria-label="Milestones table">
    <table aria-label="Milestones">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Milestone Name</th>
                <th scope="col">Type</th>
                <th scope="col">Participant</th>
                <th scope="col">Achievement Date</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="milestones-table-body">
            <% if (typeof milestones !== 'undefined' && milestones.length > 0) { %>
                <% milestones.forEach(function(milestone) { %>
                    <tr>
                        <td><%= milestone.MilestoneID || milestone.milestoneid || milestone.id %></td>
                        <td><%= milestone.MilestoneTitle || milestone.milestonetitle || milestone.title || 'N/A' %></td>
                        <td>N/A</td>
                        <td>
                            <%= (milestone.FirstName || milestone.firstname || milestone.firstName || '') + ' ' + (milestone.LastName || milestone.lastname || milestone.lastName || '') %>
                        </td>
                        <td>
                            <%= milestone.MilestoneDate ? new Date(milestone.MilestoneDate).toLocaleDateString() : (milestone.milestonedate ? new Date(milestone.milestonedate).toLocaleDateString() : 'N/A') %>
                        </td>
                        <td>Active</td>
                        <td>
                            <a href="/milestones/<%= milestone.MilestoneID || milestone.milestoneid || milestone.id %>/edit" class="btn btn-sm btn-secondary" aria-label="Edit milestone">Edit</a>
                            <form action="/milestones/<%= milestone.MilestoneID || milestone.milestoneid || milestone.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this milestone?');" aria-label="Delete milestone">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center" role="status" aria-live="polite">No milestones found. Add a milestone to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#milestones-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#milestones-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} milestone${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



<%- include('../partials/header', { title: 'Milestones - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Milestones</h1>
    <p>Manage all participant milestones</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search milestones</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search milestones by name..." aria-label="Search milestones by name">
    <a href="/milestones/add" class="btn btn-primary" aria-label="Add new milestone">Add New Milestone</a>
</div>

<div class="table-container" role="region" aria-label="Milestones table">
    <table aria-label="Milestones">
        <thead>
            <tr>
                <th scope="col">Milestone Title</th>
                <th scope="col">Participant</th>
                <th scope="col">Date Achieved</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="milestones-table-body">
            <% if (typeof milestones !== 'undefined' && milestones.length > 0) { %>
                <% milestones.forEach(function(milestone) { %>
                    <tr>
                        <td><%= milestone.milestonetitle || 'N/A' %></td>
                        <td><%= (milestone.firstname || '') + ' ' + (milestone.lastname || '') %></td>
                        <td><%= milestone.milestonedate ? new Date(milestone.milestonedate).toISOString().slice(0,10) : 'N/A' %></td>
                        <td>
                            <a href="/milestones/edit/<%= milestone.milestoneid %>" class="btn btn-sm btn-primary">Edit</a>
                            <form action="/milestones/delete/<%= milestone.milestoneid %>" method="POST" style="display: inline; margin-left: 0.5rem;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this milestone?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center" role="status" aria-live="polite">No milestones found. Add a milestone to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#milestones-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#milestones-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} milestone${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



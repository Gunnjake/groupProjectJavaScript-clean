<%- include('../partials/header', { title: 'Participants - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Participants</h1>
    <p>Manage participant information</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search participants</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search participants by name, email, or program..." aria-label="Search participants by name, email, or program">
    <a href="/participants/new" class="btn btn-primary" aria-label="Add new participant">Add New Participant</a>
</div>

<div class="table-container" role="region" aria-label="Participants table">
    <table aria-label="Participants">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Location</th>
                <th scope="col">Latest Milestone</th>
                <th scope="col">Newsletter</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="participants-table-body">
            <% if (typeof participants !== 'undefined' && participants.length > 0) { %>
                <% participants.forEach(function(participant) { %>
                    <tr>
                        <td><%= (participant.firstname || '') + ' ' + (participant.lastname || '') %></td>
                        <td><%= participant.email || '' %></td>
                        <td><%= participant.phonenumber || 'N/A' %></td>
                        <td><%= (participant.city || '') + (participant.state ? ', ' + participant.state : '') %></td>
                        <td><%= participant.latest_milestone || 'None' %></td>
                        <td><%= participant.newsletter === 1 ? 'Yes' : 'No' %></td>
                        <td>
                            <a href="/participants/edit/<%= participant.personid %>" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/milestones/manage/<%= participant.personid %>" class="btn btn-sm btn-outline-primary" style="margin-left: 0.5rem;">Manage Milestones</a>
                            <form action="/participants/<%= participant.personid %>/delete" method="POST" style="display: inline; margin-left: 0.5rem;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this participant?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center" role="status" aria-live="polite">No participants found. Add a participant to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader announcements
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#participants-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        // Announce results
        const status = document.querySelector('#participants-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} participant${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



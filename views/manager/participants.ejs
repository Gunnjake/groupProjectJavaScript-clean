<%- include('../partials/header', { title: 'Participants - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Participants</h1>
    <p>Manage participant information</p>
</div>

<div class="search-container">
    <input type="text" id="search-input" class="search-input" placeholder="Search participants by name, email, or program...">
    <a href="/participants/new" class="btn btn-primary">Add New Participant</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Program</th>
                <th>Enrollment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="participants-table-body">
            <!-- Participants will be populated here when database is connected -->
            <tr>
                <td colspan="7" class="text-center">No participants found. Add a participant to get started.</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    // Search functionality
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#participants-table-body tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>


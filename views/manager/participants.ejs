<%- include('../partials/header', { title: 'Participants - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Participants</h1>
    <p>Manage participant information</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search participants</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search participants by name, email, or program..." aria-label="Search participants by name, email, or program">
    <a href="/participants/new" class="btn btn-primary" aria-label="Add new participant">Add New Participant</a>
</div>

<div class="table-container" role="region" aria-label="Participants table">
    <table aria-label="Participants">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Most Recent Milestone</th>
                <th scope="col">Newsletter</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="participants-table-body">
            <% if (typeof participants !== 'undefined' && participants.length > 0) { %>
                <% participants.forEach(function(participant) { %>
                    <tr>
                        <td><%= (participant.FirstName || participant.firstname || '').trim() + ' ' + (participant.LastName || participant.lastname || '').trim() %></td>
                        <td><%= (participant.City || participant.city || '') + (participant.State || participant.state ? ', ' + participant.State : '') %></td>
                        <td>
                            <% if (participant.latestMilestone && participant.latestMilestone.title) { %>
                                <%= participant.latestMilestone.title %>
                                <% if (participant.latestMilestone.date) { %>
                                    <br><small style="color: var(--text-secondary);">
                                        <%= new Date(participant.latestMilestone.date).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                    </small>
                                <% } %>
                            <% } else { %>
                                <span style="color: var(--text-secondary);">None</span>
                            <% } %>
                        </td>
                        <td><%= participant.NewsLetter === 1 || participant.newsletter === 1 ? 'Yes' : 'No' %></td>
                        <td>
                            <a href="/participants/<%= participant.PersonID || participant.personid || participant.id %>/edit" class="btn btn-sm btn-secondary" aria-label="Edit participant">Edit</a>
                            <form action="/participants/<%= participant.PersonID || participant.personid || participant.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this participant?');" aria-label="Delete participant">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center" role="status" aria-live="polite">No participants found. Add a participant to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader announcements
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#participants-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        // Announce results
        const status = document.querySelector('#participants-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} participant${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



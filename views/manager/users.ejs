<%- include('../partials/header', { title: 'User Maintenance - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<!-- User maintenance page - manager only -->
<div class="page-header">
    <h1>User Maintenance</h1>
    <p>Manage user accounts (Manager Only)</p>
</div>

<!-- Search and add button -->
<div class="search-container">
    <label for="search-input" class="sr-only">Search users</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search users by username, email, or role..." aria-label="Search users by username, email, or role">
    <a href="/users/new" class="btn btn-primary" aria-label="Add new user">Add New User</a>
</div>

<!-- Users table -->
<div class="table-container" role="region" aria-label="Users table">
    <table aria-label="Users">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Created</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="users-table-body">
            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.PersonID || user.personid || user.id %></td>
                        <td><%= user.Email || user.email || 'N/A' %></td>
                        <td><%= user.Email || user.email || 'N/A' %></td>
                        <td><%= user.roles || 'N/A' %></td>
                        <td>N/A</td>
                        <td>
                            <a href="/users/<%= user.PersonID || user.personid || user.id %>/edit" class="btn btn-sm btn-secondary" aria-label="Edit user">Edit</a>
                            <form action="/users/<%= user.PersonID || user.personid || user.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');" aria-label="Delete user">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center" role="status" aria-live="polite">No users found. Add a user to get started.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Client-side search filter -->
<script>
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#users-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        // Announce results to screen readers
        const status = document.querySelector('#users-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} user${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



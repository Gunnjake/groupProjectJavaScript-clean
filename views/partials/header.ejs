<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Ella Rises' %></title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Chart.js for future dashboard use -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Navigation Header -->
    <header class="main-header">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <a href="/">
                        <img src="/images/ella-rises-logo.png" alt="Ella Rises Logo" class="logo-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="logo-placeholder" style="display: none;">ER</div>
                    </a>
                </div>
                
                <ul class="nav-menu">
                    <!-- Public navigation (visible to everyone) -->
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/about" class="nav-link">About</a></li>
                    <li><a href="/programs" class="nav-link">Programs</a></li>
                    <li><a href="/register" class="nav-link">Register</a></li>
                    <li><a href="/contact" class="nav-link">Contact Us</a></li>
                    <li><a href="https://givebutter.com/EllaRises" target="_blank" rel="noopener noreferrer" class="nav-link donate-btn">Donate</a></li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Navigation for logged in users -->
                        <li><a href="/dashboard" class="nav-link">Dashboard</a></li>
                        <li><a href="/participants" class="nav-link">Participants</a></li>
                        <li><a href="/events" class="nav-link">Events</a></li>
                        <li><a href="/surveys" class="nav-link">Surveys</a></li>
                        <li><a href="/milestones" class="nav-link">Milestones</a></li>
                        <li><a href="/donations" class="nav-link">Donations</a></li>
                        <% if (user.role === 'manager') { %>
                            <li><a href="/users" class="nav-link">User Maintenance</a></li>
                        <% } %>
                        <li><a href="/logout" class="nav-link">Logout</a></li>
                    <% } else { %>
                        <li><a href="/login" class="nav-link">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Flash messages -->
    <% if (typeof messages !== 'undefined' && messages) { %>
        <div class="flash-messages">
            <% messages.forEach(function(message) { %>
                <div class="flash-message flash-<%= message.type %>">
                    <%= message.text %>
                </div>
            <% }); %>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="main-content">


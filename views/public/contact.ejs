<%- include('../partials/header', { title: 'Contact Us - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Contact Us</h1>
    <p>Get in touch with the Ella Rises team</p>
</div>

<div class="form-container">
    <form action="/contact" method="POST">
        <div class="form-group">
            <label for="name">Name *</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="subject">Subject *</label>
            <input type="text" id="subject" name="subject" required>
        </div>
        <div class="form-group">
            <label for="message">Message *</label>
            <textarea id="message" name="message" rows="6" required></textarea>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Send Message</button>
        </div>
    </form>
</div>

<div class="card mt-2">
    <h2 class="card-header">Other Ways to Reach Us</h2>
    <p><strong>Email:</strong> nadia@ellarises.org</p>
    <p><strong>Website:</strong> <a href="https://www.ellarises.org" target="_blank">www.ellarises.org</a></p>
</div>

<%- include('../partials/footer') %>



<%- include('../partials/header', { title: 'Participants - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1>Participants</h1>
    <p>View participant information (View Only)</p>
</div>

<div class="search-container">
    <label for="search-input" class="sr-only">Search participants</label>
    <input type="text" id="search-input" class="search-input" placeholder="Search participants by name, email, or program..." aria-label="Search participants by name, email, or program">
</div>

<div class="table-container" role="region" aria-label="Participants table">
    <table aria-label="Participants">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Location</th>
            </tr>
        </thead>
        <tbody id="participants-table-body">
            <% if (typeof participants !== 'undefined' && participants.length > 0) { %>
                <% participants.forEach(function(participant) { %>
                    <tr>
                        <td><%= (participant.FirstName || participant.firstname || '').trim() + ' ' + (participant.LastName || participant.lastname || '').trim() %></td>
                        <td><%= participant.Email || participant.email || '' %></td>
                        <td><%= (participant.City || participant.city || '') + (participant.State || participant.state ? ', ' + participant.State : '') %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center" role="status" aria-live="polite">No participants found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    // Search functionality with screen reader support
    document.getElementById('search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#participants-table-body tr');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isVisible = text.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
            if (isVisible) visibleCount++;
        });
        
        const status = document.querySelector('#participants-table-body [role="status"]');
        if (status && visibleCount > 0) {
            status.textContent = `${visibleCount} participant${visibleCount === 1 ? '' : 's'} found`;
        }
    });
</script>

<%- include('../partials/footer') %>



<%- include('../partials/header', { title: "Event Survey", user: user }) %>

<div class="page-header">
    <h1>Event Survey</h1>
    <p>Please rate your experience for this event.</p>
</div>

<form method="POST" action="/user/surveys/submit">
    <input type="hidden" name="registrationid" value="<%= registration.registrationid %>">

    <div class="survey-section">
        <h3>How satisfied were you with the event?</h3>
        <div class="radio-group">
            <% for (let i = 1; i <= 5; i++) { %>
                <label><input type="radio" name="surveysatisfactionscore" value="<%= i %>" required> <%= i %></label>
            <% } %>
        </div>
    </div>

    <div class="survey-section">
        <h3>How useful was the event?</h3>
        <div class="radio-group">
            <% for (let i = 1; i <= 5; i++) { %>
                <label><input type="radio" name="surveyusefulnessscore" value="<%= i %>" required> <%= i %></label>
            <% } %>
        </div>
    </div>

    <div class="survey-section">
        <h3>How would you rate the instructor?</h3>
        <div class="radio-group">
            <% for (let i = 1; i <= 5; i++) { %>
                <label><input type="radio" name="surveyinstructorscore" value="<%= i %>" required> <%= i %></label>
            <% } %>
        </div>
    </div>

    <div class="survey-section">
        <h3>Would you recommend this event?</h3>
        <div class="radio-group">
            <% for (let i = 1; i <= 5; i++) { %>
                <label><input type="radio" name="surveyrecommendationscore" value="<%= i %>" required> <%= i %></label>
            <% } %>
        </div>
    </div>

    <div class="survey-section">
        <h3>Overall rating?</h3>
        <div class="radio-group">
            <% for (let i = 1; i <= 5; i++) { %>
                <label><input type="radio" name="surveyoverallscore" value="<%= i %>" required> <%= i %></label>
            <% } %>
        </div>
    </div>

    <div class="survey-section">
        <label>Comments (optional)</label>
        <textarea name="surveycomments" class="form-control" rows="4"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Submit Survey</button>
</form>

<%- include('../partials/footer') %>
